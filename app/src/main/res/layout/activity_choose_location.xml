<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLocation"
    android:background="#DDDBD4">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/choose_location"
        android:textColor="#0C510E"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibLivingRoom"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toStartOf="@+id/ibPatio"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/livingroom5" />

    <ImageButton
        android:id="@+id/ibPatio"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibOffice"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.272"
        app:srcCompat="@drawable/patio" />

    <ImageButton
        android:id="@+id/ibOffice"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.113"
        app:srcCompat="@drawable/kantoor" />

    <ImageButton
        android:id="@+id/ibBedroom"
        android:layout_width="94dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bedroom" />

    <ImageButton
        android:id="@+id/ibKitchen"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibBedroom"
        app:srcCompat="@drawable/kitchen" />

    <ImageButton
        android:id="@+id/ibBalcony"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/ibKitchen"
        app:srcCompat="@drawable/balcony" />

    <TextView
        android:id="@+id/tvLR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Livingroom"
        android:textColor="#0C510E"
        app:layout_constraintEnd_toEndOf="@+id/ibLivingRoom"
        app:layout_constraintTop_toBottomOf="@+id/ibLivingRoom" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:text="Patio"
        android:textColor="#0C510E"
        app:layout_constraintEnd_toEndOf="@+id/ibPatio"
        app:layout_constraintTop_toBottomOf="@+id/ibPatio" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:text="Office"
        android:textColor="#0C510E"
        app:layout_constraintEnd_toEndOf="@+id/ibOffice"
        app:layout_constraintTop_toBottomOf="@+id/ibOffice" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:text="Bedroom"
        android:textColor="#0C510E"
        app:layout_constraintEnd_toEndOf="@+id/ibBedroom"
        app:layout_constraintTop_toBottomOf="@+id/ibBedroom" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:text="Kitchen"
        android:textColor="#0C510E"
        app:layout_constraintEnd_toEndOf="@+id/ibKitchen"
        app:layout_constraintTop_toBottomOf="@+id/ibKitchen" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:text="Balcony"
        android:textColor="#0C510E"
        app:layout_constraintEnd_toEndOf="@+id/ibBalcony"
        app:layout_constraintTop_toBottomOf="@+id/ibBalcony" />

</androidx.constraintlayout.widget.ConstraintLayout>